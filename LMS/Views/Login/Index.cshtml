
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 5%">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="row">
                <form class="col-md-10 form-horizontal" role="form">
                    <fieldset>

                        <!-- Email input-->
                        <div class="form-group">

                            <label class=" control-label font-color" for="textinput">Email</label>
                            <div class="">
                                <input id="textinput" name="textinput" type="text" placeholder="Email" class="form-control input-md" />

                            </div>
                        </div>

                        <!-- Password input-->
                        <div class="form-group">
                            <label class=" control-label font-color" for="passwordinput">Password </label>
                            <div class="">
                                <input id="passwordinput" name="passwordinput" type="password" placeholder="Password" class="form-control input-md" />

                            </div>
                        </div>

                        <!-- Button -->
                        <div class="form-group">

                            <div class="pull-right login-button">
                                <button id="singlebutton" name="singlebutton" class="btn btn-primary">Login</button>
                            </div>
                        </div>

                    </fieldset>
                </form>
            </div>

        </div>
    </div>
</div>

